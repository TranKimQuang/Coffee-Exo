<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ExoCoffee.Controllers.ViewOrdersController" spacing="10">
    <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
    </padding>
    <children>
        <TableView fx:id="orderTable">
            <columns>
                <TableColumn fx:id="orderIdColumn" text="Mã đơn hàng" />
                <TableColumn fx:id="totalAmountColumn" text="Tổng số tiền" />
                <TableColumn fx:id="orderDateColumn" text="Ngày đặt hàng" />
            </columns>
        </TableView>
        <Button text="Thanh toán" onAction="#handleCheckout" />
        <Button text="Xóa đơn hàng" onAction="#handleDeleteOrder" />
    </children>
</VBox>
