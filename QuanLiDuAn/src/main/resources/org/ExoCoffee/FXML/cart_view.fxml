<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8"  xmlns:fx="http://javafx.com/fxml/1" style="-fx-background-color: linear-gradient(to bottom, #f0f8ff, #c6e2ff);" fx:controller="ExoCoffee.Controllers.CartViewController" spacing="10">
    <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
    </padding>
    <children>
        <TableView fx:id="cartTable">
            <columns>
                <TableColumn fx:id="productNameColumn" text="Tên sản phẩm" />
                <TableColumn fx:id="quantityColumn" text="Số lượng" />
                <TableColumn fx:id="priceColumn" text="Giá" />
                <TableColumn fx:id="totalProductColumn" text="Tổng tiền" />
            </columns>
        </TableView>
        <Label fx:id="totalAmountLabel" text="Tổng tiền: 0.00" />
        <Button text="Tạo đơn" onAction="#handleCreateOrder" />
    </children>
</VBox>
