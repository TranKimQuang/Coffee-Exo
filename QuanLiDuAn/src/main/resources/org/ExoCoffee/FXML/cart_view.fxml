<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="485.0" prefWidth="415.0" spacing="10" style="-fx-background-color: linear-gradient(to bottom, #f0f8ff, #c6e2ff);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ExoCoffee.Controllers.CartViewController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <TableView fx:id="cartTable">
            <columns>
                <TableColumn fx:id="productNameColumn" prefWidth="103.99999558925629" text="Tên sản phẩm" />
                <TableColumn fx:id="quantityColumn" prefWidth="91.20001983642578" text="Số lượng" />
                <TableColumn fx:id="priceColumn" prefWidth="88.20002746582031" text="Giá" />
                <TableColumn fx:id="totalProductColumn" prefWidth="110.5999755859375" text="Tổng tiền" />
            </columns>
        </TableView>
        <Label fx:id="totalAmountLabel" text="Tổng tiền: 0.00" />
        <Button onAction="#handleCreateOrder" styleClass="login-button" stylesheets="@../CSS/styles.css" text="Tạo đơn" />
    </children>
</VBox>
