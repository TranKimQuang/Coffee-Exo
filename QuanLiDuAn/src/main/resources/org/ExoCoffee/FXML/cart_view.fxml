<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ExoCoffee.Controllers.CartViewController">
    <!-- Padding cho BorderPane -->
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Phần trên cùng: Tiêu đề -->
    <top>
        <Label text="Giỏ hàng" style="-fx-font-size: 20px; -fx-font-weight: bold;">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
        </Label>
    </top>

    <!-- Phần trung tâm: Bảng và nút -->
    <center>
        <VBox spacing="10">
            <!-- Padding cho VBox -->
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <!-- Bảng hiển thị giỏ hàng -->
            <TableView fx:id="cartTable">
                <columns>
                    <TableColumn fx:id="productNameColumn" text="Tên SP"/>
                    <TableColumn fx:id="quantityColumn" text="Số lượng"/>
                    <TableColumn fx:id="priceColumn" text="Giá"/>
                    <TableColumn fx:id="totalPriceColumn" text="Tổng tiền"/>
                </columns>
            </TableView>

            <!-- Nút xác nhận đơn hàng -->
            <HBox spacing="10">
                <Button text="Xác nhận đơn hàng" onAction="#handleCheckout"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>