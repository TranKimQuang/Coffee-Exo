<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ExoCoffee.Controllers.CartViewController" spacing="10">
    <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
    </padding>
    <children>
        <TableView fx:id="cartTable">
            <columns>
                <TableColumn fx:id="productNameColumn" text="Tên sản phẩm" />
                <TableColumn fx:id="quantityColumn" text="Số lượng" />
                <TableColumn fx:id="priceColumn" text="Giá" />
                <TableColumn fx:id="totalPriceColumn" text="Tổng tiền" />
            </columns>
        </TableView>

        <Button text="Thanh toán" onAction="#handlePlaceOrder" />
    </children>
</VBox>
