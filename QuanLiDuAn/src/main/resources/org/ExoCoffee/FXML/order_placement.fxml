<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ExoCoffee.Controllers.OrderPlacementController" spacing="10">
    <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
    </padding>
    <children>
        <TableView fx:id="productTable">
            <columns>
                <TableColumn fx:id="productIdColumn" text="Mã sản phẩm" />
                <TableColumn fx:id="nameColumn" text="Tên sản phẩm" />
                <TableColumn fx:id="priceColumn" text="Giá" />
                <TableColumn fx:id="categoryColumn" text="Danh mục" />
            </columns>
        </TableView>
        <Button text="Đặt hàng" onAction="#handlePlaceOrder" />
        <Button text="Xem hàng đã đặt" onAction="#handleViewOrders" />
    </children>
</VBox>
