<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ExoCoffee.Controllers.ViewProductsController" spacing="10">
    <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
    </padding>
    <children>
        <TableView fx:id="orderTable">
            <columns>
                <TableColumn fx:id="orderIdColumn" text="Mã đơn hàng" />
                <TableColumn fx:id="productIdColumn" text="Mã sản phẩm" />
                <TableColumn fx:id="quantityColumn" text="Số lượng" />
                <TableColumn fx:id="totalPriceColumn" text="Tổng giá" />
            </columns>
        </TableView>
        <Button text="Xóa đơn hàng" onAction="#handleDeleteOrder" />
        <Button text="Đặt đơn hàng" onAction="#handleAddOrder" />
    </children>
</VBox>
